{
  "name": "material-composer",
  "private": false,
  "author": {
    "name": "Hendrik Mans",
    "email": "hendrik@mans.de",
    "url": "https://hendrik.mans.de"
  },
  "description": "Composable, shader-driven Three.js materials!",
  "version": "0.0.1",
  "main": "dist/material-composer.cjs.js",
  "module": "dist/material-composer.esm.js",
  "types": "dist/material-composer.cjs.d.ts",
  "files": [
    "units/**",
    "modules/**",
    "dist/**",
    "LICENSE",
    "README.md"
  ],
  "preconstruct": {
    "entrypoints": [
      "index.ts",
      "units/index.ts",
      "modules/index.ts"
    ]
  },
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "dev": "preconstruct watch",
    "build": "preconstruct build",
    "release": "yarn ci && yarn publish",
    "test": "jest --passWithNoTests",
    "ci": "yarn clean && yarn build && yarn test",
    "docs": "typedoc src/index.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.17.12",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/jest": "^28.1.7",
    "@types/three": "^0.143.1",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "rimraf": "^3.0.2",
    "three": "^0.143.0",
    "ts-jest": "^28.0.8",
    "tslib": "^2.4.0",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "shader-composer": "0.3.0",
    "shader-composer-toybox": "^0.1.1",
    "three-custom-shader-material": "^4.0.0"
  },
  "peerDependencies": {
    "three": ">=0.141.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      [
        "@babel/preset-typescript",
        {
          "isTSX": true,
          "allExtensions": true
        }
      ]
    ]
  }
}
