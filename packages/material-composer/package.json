{
  "name": "material-composer",
  "author": {
    "name": "Hendrik Mans",
    "email": "hendrik@mans.de",
    "url": "https://hendrik.mans.de"
  },
  "description": "Composable, shader-driven Three.js materials!",
  "version": "0.2.7",
  "main": "dist/material-composer.cjs.js",
  "module": "dist/material-composer.esm.js",
  "typedoc": {
    "entryPoint": "./src/index.ts",
    "readmeFile": "./README.md"
  },
  "files": [
    "units/**",
    "modules/**",
    "dist/**",
    "LICENSE",
    "README.md"
  ],
  "preconstruct": {
    "entrypoints": [
      "index.ts",
      "units/index.ts",
      "modules/index.ts"
    ]
  },
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "build": "preconstruct build"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      [
        "@babel/preset-typescript",
        {
          "isTSX": true,
          "allExtensions": true
        }
      ]
    ]
  },
  "dependencies": {
    "@material-composer/patch-material": "^0.2.0",
    "fp-ts": "^2.12.3",
    "shader-composer": "^0.5.0",
    "shader-composer-toybox": "^0.5.0"
  },
  "peerDependencies": {
    "three": ">=0.141.0"
  }
}
