{
  "name": "shader-composer",
  "private": false,
  "author": {
    "name": "Hendrik Mans",
    "email": "hendrik@mans.de",
    "url": "https://hmans.co"
  },
  "description": "Node-based Shader Composition!",
  "version": "0.3.3",
  "main": "dist/shader-composer.cjs.js",
  "module": "dist/shader-composer.esm.js",
  "types": "dist/shader-composer.cjs.d.ts",
  "files": [
    "dist/**",
    "LICENSE",
    "README.md"
  ],
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "dev": "preconstruct watch",
    "docs": "typedoc --plugin typedoc-plugin-markdown --excludeInternal --name 'Shader Composer' src/index.ts src/stdlib/index.ts",
    "build": "preconstruct build",
    "release": "yarn ci && yarn publish",
    "test": "jest --passWithNoTests",
    "ci": "yarn clean && yarn build && yarn test"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.17.12",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/jest": "^29.0.0",
    "@types/three": "^0.143.1",
    "jest": "^29.0.1",
    "jest-environment-jsdom": "^29.0.1",
    "rimraf": "^3.0.2",
    "three": "^0.143.0",
    "ts-jest": "^28.0.8",
    "tslib": "^2.4.0",
    "typedoc-plugin-markdown": "^3.13.5",
    "typescript": "^4.8.2"
  },
  "peerDependencies": {
    "three": ">=0.141.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      [
        "@babel/preset-typescript",
        {
          "isTSX": true,
          "allExtensions": true
        }
      ]
    ]
  },
  "dependencies": {
    "fp-ts": "^2.12.2"
  }
}
