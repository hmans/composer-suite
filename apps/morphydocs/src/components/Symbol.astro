---
import Markdown from "./Markdown.astro"
import type { SymbolDescription } from "./morphy"

export interface Props extends SymbolDescription {}

const { name, doc } = Astro.props
---

<div class="symbol">
  <h3>{name}</h3>
  {doc && <Markdown body={doc.description} />}
</div>

<style>
  div.symbol {
    margin: 2em 0;
  }
</style>
