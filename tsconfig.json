{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["packages/**/*"],
  "exclude": [
    "node_modules",
    "**/node_modules/**/*",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "typedocOptions": {
    "name": "Composer Suite",
    "plugin": "typedoc-plugin-markdown",
    "entryPoints": ["packages/shader-composer", "packages/material-composer"],
    "entryPointStrategy": "packages",
    "out": "docs"
  }
}
