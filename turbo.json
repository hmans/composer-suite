{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "//#clean": {
      "dependsOn": [],
      "outputs": [],
      "cache": false
    },

    "build": {
      "dependsOn": ["//#clean", "^build"],
      "outputs": ["dist/**", "*/dist/**"]
    },

    "test": {
      "dependsOn": ["^test"],
      "outputs": [],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    }
  }
}
