{
  "name": "composer-suite-monorepo",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "author": "Hendrik Mans <hendrik@mans.de>",
  "license": "MIT",
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": false,
    "arrowParens": "always"
  },
  "scripts": {
    "build": "preconstruct build",
    "clean:vite": "rimraf **/node_modules/.vite",
    "dev": "pnpm examples",
    "examples": "pnpm clean:vite && preconstruct dev && cd apps/vfx-composer-examples/ && pnpm dev",
    "postinstall": "preconstruct dev",
    "test": "jest --passWithNoTests",
    "ci": "preconstruct validate && pnpm build && pnpm test",
    "ci:version": "changeset version && pnpm install --no-frozen-lockfile",
    "ci:release": "pnpm ci && pnpm changeset publish",
    "typedoc:shader-composer": "typedoc --name 'Shader Composer' --out docs/shader-composer/ packages/shader-composer/src/index.ts packages/shader-composer/src/fun.ts",
    "typedoc:material-composer": "typedoc --name 'Shader Composer' --out docs/material-composer/ packages/material-composer/src/index.ts packages/material-composer/src/modules/index.ts",
    "typedoc": "pnpm typedoc:shader-composer && pnpm typedoc:material-composer"
  },
  "dependencies": {
    "@babel/core": "^7.18.13",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@changesets/cli": "^2.24.4",
    "@manypkg/cli": "^0.19.1",
    "@preconstruct/cli": "^2.2.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "@types/three": "^0.143.1",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^29.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.8",
    "tslib": "^2.4.0",
    "typedoc": "^0.23.13",
    "typedoc-plugin-markdown": "^3.13.5",
    "typescript": "^4.8.2"
  },
  "stackblitz": {
    "startCommand": "cd apps/vfx-composer-examples && pnpm dev"
  }
}
