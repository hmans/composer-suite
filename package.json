{
  "name": "three-vfx-monorepo",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "author": "Hendrik Mans <hendrik@mans.de>",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": false,
    "arrowParens": "always",
    "printWidth": 80
  },
  "scripts": {
    "build": "preconstruct build",
    "dev": "yarn examples",
    "examples": "preconstruct dev && cd apps/examples/ && yarn dev",
    "postinstall": "preconstruct dev && manypkg check",
    "test": "jest --passWithNoTests",
    "ci": "preconstruct validate && manypkg check && yarn build && yarn test",
    "release": "yarn ci && yarn changeset publish"
  },
  "dependencies": {
    "@changesets/cli": "^2.23.2",
    "@manypkg/cli": "^0.19.1",
    "@preconstruct/cli": "^2.1.5"
  },
  "stackblitz": {
    "startCommand": "cd apps/examples && yarn dev"
  }
}
